<div class="container-center-page">
    <div class="col-lg-12 text-center">
        <div class="row">
            <h1 class="text-center">Before we begin...</h1>
            <% if current_page?(email_pg_worksheet_path) %>
                <h3 class="text-center">Please submit the title of the worksheet for this Email QA data:</h3>
            <% else %>
                <h3 class="text-center">Please submit the title of the worksheet for this Direct Mail QA data:</h3>
            <% end %>
            <br>

            <div class="form-check">
                <% @worksheets.each do |sheet| %>
                    <input class="form-check-input" type="radio">
                    <label class="form-check-label"><%= sheet %></label>
                <% end %>
            </div>

        </div>
        <%= link_to "Next", validating_path, class: "btn btn-secondary btn-lg" %>
    </div>
</div>
